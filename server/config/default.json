{
  "environment": "development",
  "server": {
    "port": 3000,
    "cors": {
      "origin": "http://localhost:5173",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
      "credentials": true
    }
  },
  "database": {
    "uri": "mongodb://localhost:27017/webhaze",
    "options": {
      "useNewUrlParser": true,
      "useUnifiedTopology": true
    }
  },
  "auth": {
    "jwtSecret": "development-secret-key-change-in-production",
    "jwtExpiry": "24h",
    "bcryptRounds": 12
  },
  "storage": {
    "type": "local",
    "local": {
      "uploadDir": "./uploads"
    }
  },
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "email": {
    "from": "noreply@webhaze.local",
    "smtp": {
      "host": "localhost",
      "port": 1025,
      "secure": false
    }
  },
  "analytics": {
    "clarity": {
      "enabled": true
    }
  },
  "logging": {
    "level": "debug",
    "format": "combined"
  }
}